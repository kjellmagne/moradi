{
  "name": "office-chores-app",
  "version": "1.0.0",
  "description": "Office chores planner with admin, iPad, and mobile views",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "postinstall": "npm --prefix web install --cache .npm-cache",
    "dev": "nodemon src/server.js",
    "dev:web": "npm --prefix web dev",
    "build:web": "npm --prefix web build",
    "start": "npm run build:web && node src/server.js",
    "check": "node --check src/server.js && node --check src/db.js && node --check src/scheduler.js"
  },
  "dependencies": {
    "better-sqlite3": "^11.9.1",
    "express": "^4.21.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^8.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.9"
  }
}
